{
	"html": {
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2
		}
	},
	"css": {
		"formatter": {
			"indentStyle": "space",
			"indentWidth": 2
		}
	},
	"javascript": {
		"formatter": {
			"indentStyle": "space",
